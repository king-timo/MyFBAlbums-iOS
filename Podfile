platform :ios, '9.0'
use_frameworks!
inhibit_all_warnings!

target 'MyFBAlbums' do
 	
	pod 'SwiftLint'
 	pod 'SCLAlertView'
	pod 'MBProgressHUD', '~> 1.0.0'

	# Pods for Facebook
	pod 'FacebookCore'
	pod 'FacebookLogin'

	# Pods for Firebase
	pod 'Firebase'
	pod 'Firebase/Core'
	pod 'Firebase/Auth'
	pod 'Firebase/Database'
end